<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >
   

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/spring" />

   
    
    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:columnCount="2"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" >
        
        
        <Button
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_height="155dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
              android:background="@drawable/avad"   />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="@drawable/sunil"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="@drawable/vivek"
            android:typeface="serif" />

        <Button
            android:id="@+id/button4"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_column="0"
             android:layout_gravity="left|top"
            android:layout_row="3" 
                android:background="@drawable/subh"
                />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/avadh"
            android:layout_gravity="left|top"
            android:layout_marginLeft="6dp"
            android:textSize="14dp"
            android:typeface="serif" 
             android:textAppearance="?android:attr/textAppearanceMedium"
              />
          <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/sunil" 
            android:layout_gravity="left|top"
            android:layout_marginLeft="6dp"
            android:textSize="14dp"
            android:typeface="serif" 
             android:textAppearance="?android:attr/textAppearanceMedium"
            />
          <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/vivek"
            android:layout_gravity="left|top"
            android:layout_marginLeft="6dp"
            android:textSize="14dp"
            android:typeface="serif" 
             android:textAppearance="?android:attr/textAppearanceMedium"
           />
            <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="@string/shubh" 
            android:layout_marginLeft="6dp"
            android:layout_gravity="left|top"
            android:textSize="14dp"
            android:typeface="serif" 
             android:textAppearance="?android:attr/textAppearanceMedium"
            />

    </GridLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gridLayout1"
        android:layout_alignParentTop="true"
        android:text="About us :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/bg_gradient_end"
        android:textStyle="bold"
        android:typeface="serif" />
    
</RelativeLayout>
</ScrollView>
